# ==========================================
# AI WORKFLOW PLATFORM - ENVIRONMENT CONFIG
# ==========================================

# ------------------------------------------
# Application Settings
# ------------------------------------------
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
API_VERSION=v1

# ------------------------------------------
# Database (PostgreSQL)
# ------------------------------------------
DB_PASSWORD=your-postgres-password-change-me
DATABASE_URL=postgresql://platform_user:${DB_PASSWORD}@postgres:5432/ai_platform

# n8n Database
N8N_DB_PASSWORD=your-n8n-db-password-change-me

# ------------------------------------------
# Redis Cache & Queue
# ------------------------------------------
REDIS_PASSWORD=your-redis-password-change-me
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_CACHE_URL=redis://:${REDIS_PASSWORD}@redis:6379/1

# ------------------------------------------
# n8n Configuration
# ------------------------------------------
N8N_USER=admin
N8N_PASSWORD=your-n8n-admin-password-change-me
N8N_API_KEY=your-n8n-api-key-generate-in-n8n-settings
N8N_ENCRYPTION_KEY=your-n8n-encryption-key-32-chars-min

# URLs (Update with your domain)
N8N_HOST=n8n.yourdomain.com
N8N_WEBHOOK_URL=https://workflows.yourdomain.com
N8N_EDITOR_URL=https://n8n.yourdomain.com
N8N_API_URL=http://n8n:5678/api/v1

# ------------------------------------------
# AI API Keys
# ------------------------------------------
# Anthropic Claude (Primary AI Agent)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# OpenAI (Fallback/Alternative)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ------------------------------------------
# Application URLs
# ------------------------------------------
# Frontend
FRONTEND_URL=https://app.yourdomain.com
CORS_ORIGINS=["https://app.yourdomain.com","http://localhost:3000"]

# Backend API
API_URL=https://api.yourdomain.com
WS_URL=wss://api.yourdomain.com

# ------------------------------------------
# Monitoring & Logging
# ------------------------------------------
# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Grafana
GRAFANA_PASSWORD=your-grafana-password-change-me
GRAFANA_URL=https://grafana.yourdomain.com

# ------------------------------------------
# Payment Integration (Algeria)
# ------------------------------------------
# CCP (Centre de Ch√®ques Postaux)
CCP_API_KEY=your-ccp-api-key
CCP_MERCHANT_ID=your-merchant-id

# Baridimob
BARIDIMOB_API_KEY=your-baridimob-api-key
BARIDIMOB_MERCHANT_ID=your-merchant-id

# ------------------------------------------
# Algeria Business Integrations
# ------------------------------------------
# Yalidine Delivery API
YALIDINE_API_KEY=your-yalidine-api-key
YALIDINE_API_URL=https://api.yalidine.app/v1

# ------------------------------------------
# Social Media APIs
# ------------------------------------------
# WhatsApp Business
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-ig-business-account-id

# Facebook Graph API
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# ------------------------------------------
# Email Configuration
# ------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=AI Platform <noreply@yourdomain.com>

# ------------------------------------------
# Rate Limiting & Quotas
# ------------------------------------------
# Requests per minute
RATE_LIMIT_PER_MINUTE=60

# Monthly execution quotas by tier
QUOTA_FREE=50
QUOTA_STARTER=500
QUOTA_PRO=5000
QUOTA_ENTERPRISE=unlimited

# ------------------------------------------
# Cost Management
# ------------------------------------------
# AI Token costs (in USD per 1M tokens)
CLAUDE_INPUT_COST_PER_M=3.0
CLAUDE_OUTPUT_COST_PER_M=15.0

# DZD to USD exchange rate
DZD_TO_USD=135.0

# Markup percentage for pricing
COST_MARKUP_PERCENTAGE=50

# ------------------------------------------
# Feature Flags
# ------------------------------------------
ENABLE_WEB_SEARCH=true
ENABLE_TEMPLATE_MARKETPLACE=false
ENABLE_WHITE_LABEL=false
ENABLE_ANALYTICS=true

# ------------------------------------------
# Algeria Localization
# ------------------------------------------
DEFAULT_TIMEZONE=Africa/Algiers
DEFAULT_LANGUAGE=fr
DEFAULT_CURRENCY=DZD
SUPPORTED_LANGUAGES=["ar","fr","en"]

# Business hours (Sunday-Thursday)
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=17:00
WEEKEND_DAYS=["friday","saturday"]

# ------------------------------------------
# Security
# ------------------------------------------
# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# Session
SESSION_TIMEOUT_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
ACCESS_TOKEN_EXPIRE_MINUTES=30

# HTTPS/SSL
FORCE_HTTPS=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ------------------------------------------
# Backup & Recovery
# ------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ai-platform-backups
BACKUP_S3_REGION=eu-west-1

# ------------------------------------------
# Development Only
# ------------------------------------------
# NEVER set these to true in production
ENABLE_DEBUG_ROUTES=false
ENABLE_SWAGGER_UI=false
ALLOW_CORS_ALL=false
